@using (Html.BeginForm())
{
    <section id="login" style="padding-top: 0px">
        <h1 style="text-align:center; font-size:50px;">Profil</h1>
    </section>

    <hr style="height: 2px; border: none; margin: 10px; color: gray; background-color: gray;" />

    <section id="login" style="padding-top: 15px">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-wrap">
                        <div class="col-xs-2 col-xs-12" style="margin-left: 10px">
                            <form role="form" action="javascript:;" method="post" id="login-form" autocomplete="off">
                                @if (ViewBag.ErrorMDP != "")
                                {
                                    <label style="color: red; font-size: 15px;">@ViewBag.ErrorMDP</label>
                                }                              
                                @if (ViewBag.ErrorTBVide != "")
                                {
                                    <label style="color: red; font-size: 15px;">@ViewBag.ErrorTBVide</label>
                                }
                                @if (ViewBag.NomUtilise != "")
                                {
                                    <label style="color: red; font-size: 15px;">@ViewBag.NomUtilise</label>
                                }
                                @if (ViewBag.NonReussi != "")
                                {
                                    <label style="color: red; font-size: 15px;">@ViewBag.NonReussi</label>
                                }
                                <section id="profil" style="padding: 0px">
                                    <h1 style="text-align:center; font-size:20px;">Nom Complet</h1>
                                </section>
                                <div class="form-group">
                                    @Html.TextBox("TB_Fullname", null, new { maxlength = 50, @class = "form-control", @placeholder = "Nom complet" })
                                </div>
                                <section id="profil" style="padding: 0px">
                                    <h1 style="text-align:center; font-size:20px;">Adresse</h1>
                                </section>
                                <div class="form-group">
                                    @Html.TextBox("TB_Adresse", null, new { maxlength = 50, @class = "form-control", @placeholder = "Adresse" })
                                </div>
                                <section id="profil" style="padding: 0px">
                                    <h1 style="text-align:center; font-size:20px;">Ville</h1>
                                </section>
                                <div class="form-group">
                                    @Html.TextBox("TB_Ville", null, new { maxlength = 20, @class = "form-control", @placeholder = "Ville" })
                                </div>
                                <section id="profil" style="padding: 0px">
                                    <h1 style="text-align:center; font-size:20px;">Téléphone</h1>
                                </section>
                                <div class="form-group">
                                    @Html.TextBox("TB_Telephone", null, new { maxlength = 15, @class = "form-control", @placeholder = "Telephone" })
                                </div>
                                <section id="profil" style="padding: 0px">
                                    <h1 style="text-align:center; font-size:20px;">Mot de passe</h1>
                                </section>
                                <div class="form-group">
                                    @Html.TextBox("TB_Password", null, new { maxlength = 20, @class = "form-control", @placeholder = "Mot de passe", @Type = "password" })
                                </div>
                                <section id="profil" style="padding: 0px">
                                    <h1 style="text-align:center; font-size:20px;">Confirmation Mot de Passe</h1>
                                </section>
                                <div class="form-group">
                                    @Html.TextBox("TB_PasswordConfirm", null, new { maxlength = 20, @class = "form-control", @placeholder = "Confirmation du mot de passe", @Type = "password" })
                                </div>                              
                                <input type="submit" id="btn_login" class="btn btn-custom btn-lg btn-block" value="Modifier">
                                @if (ViewBag.UpdateSuccess != "")
                                {
                                    <label style="color: green; font-size: 15px;">@ViewBag.UpdateSuccess</label>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <hr style="height: 2px; border: none; margin: 10px; color: gray; background-color: gray;" />
}